{
  "name": "persiangravity/forms",
  "description": "Persian Gravity Forms Add-on",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "brain/monkey": "2.0.0",
    "squizlabs/php_codesniffer": "^3.9",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "scripts": {
    "lint": "vendor/bin/phpcs -sp --standard=WordPress --extensions=php --ignore=vendor,node_modules .",
    "fix": "vendor/bin/phpcbf -sp --standard=WordPress --extensions=php --ignore=vendor,node_modules .",
    "lint:wp": "vendor/bin/phpcs -sp --standard=WordPress --report=summary",
    "test": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://repo.packagist.org"
    }
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
