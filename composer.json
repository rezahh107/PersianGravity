{
  "name": "persiangravity/forms",
  "description": "Persian Gravity Forms Add-on",
  "type": "wordpress-plugin",
  "require": {
    "php": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "PersianGravityForms\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "brain/monkey": "2.0.0",
    "squizlabs/php_codesniffer": "^3.9",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "scripts": {
    "lint": "phpcs --standard=WordPress src/",
    "test": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://repo.packagist.org"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
